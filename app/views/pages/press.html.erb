<% title "Press" %>


<h1>Press</h1>


<% Article.order("date DESC").each do |article| %>

<div class="article">
  <h3><%= link_to article.title, article.url, :target => "_blank" %></h3>
  <p class="source"><%= article.source %> &mdash; <%= article.date.to_formatted_s(:long) %></p>
  <p class="summary"><%= article.summary %> <%= link_to "Read more...", article.url, :target => "_blank " %></p>
  <%= article.embed.html_safe %>
</div>

<% end %>


