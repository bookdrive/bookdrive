<% title "Press" %>

<% hold_flash_notices %>

<h1>Press</h1>


<% Article.order("date DESC").each do |article| %>

<div class="article">
  <h3><span><%= article.date.to_formatted_s(:long) %></span><%= link_to article.title, article.url, :target => "_blank" %></h3>
  <p class="source">by <%= article.author %> of <b><%= article.source %></b></p>
  <p class="summary"><%= article.summary %> <%= link_to "Read more...", article.url, :target => "_blank " %></p>
  <% if article.embed.present? %>
    <div class="embed">
      <%= article.embed.html_safe %>
    </div>
  <% end %>
</div>

<% end %>


