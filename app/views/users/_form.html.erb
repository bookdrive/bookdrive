


<%= simple_form_for(@user) do |f| %>

  <div class="inputs">
    <%= f.input :email %>

    <%= f.input :password %>
    
    <%= f.input :password_confirmation %>

    <h3>Roles</h3>
    <% for role in User::ROLES %>
      <%= check_box_tag "user[roles][]", role, @user.roles.include?(role) %>
      <%= role.humanize %><br />
    <% end %>
    <%= hidden_field_tag "user[roles][]", "" %>

  </div>

  <div class="actions">
    <%= f.button :submit %>
  </div>
<% end %>


