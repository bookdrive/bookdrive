<% title "Articles" %>
<% admin_page %>


<div class="links">
  <%= link_to 'New Article', new_article_path %>
</div>

<h1>Articles</h1>


<%= form_tag articles_path, :method => 'get', :id => "articles_search", :class => "search_form" do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
  <div id="articles"><%= render 'articles' %></div>
<% end %>

