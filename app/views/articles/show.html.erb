<% title "Articles &raquo; " + @article.title %>
<% admin_page %>

<div class="links">
<%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Back', articles_path %>
</div>

<h1><%= @article.title %></h1>
<p><%= link_to @article.url, @article.url, :target => "_blank" %></p>

<p>
  <b>Source:</b>
  <%= @article.source %>
</p>

<p>
  <b>Date:</b>
  <%= @article.date %>
</p>

<p>
  <b>Author:</b>
  <%= @article.author %>
</p>

<p>
  <b>Embed:</b>
  <%= @article.embed %>
</p>
