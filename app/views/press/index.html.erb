<% title "Press" %>

<h1>Press</h1>

<% @press.each do |press| %>

<div class="press">
  <h3><%= link_to press.title, press.url, :target => "_blank" %></h3>
  <p class="source"><%= press.source %> &mdash; <%= press.date.to_formatted_s(:long) %></p>
  <p class="summary"><%= press.summary %> <%= link_to "Read more...", press.url, :target => "_blank " %></p>
  <%= press.embed.html_safe %>

</div>

<% end %>


