<%= simple_form_for(@book) do |f| %>
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
      <% @book.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="inputs">
    <%= f.input :title %>

    <%= f.input :author %>

    <div style="float:left;width:30%;">
    <%= f.input :amazon_price, :hint => "In US Dollars", :input_html => { :default => 0, :min => 0, :max => 9999, :step => 0.01, :maxlength => 6, :size => 10,  } %>
    </div>
    
    <div style="float:left;width:30%;margin-right: 5%">
    <%= f.input :copies_desired, :label => "Copies Desired", :hint => "Requested on the Wish List", :input_html => { :min => 0, :max => 9999, :step => 1, :maxlength => 4, :size => 5 } %>
    </div>
    
    <div style="float:left;clear:right;width:30%;">
    <%= f.input :copies_received, :label => "Copies Received", :hint => "Donated per the Wish List (not shipments received)", :input_html => { :min => 0, :max => 9999, :step => 1, :maxlength => 4, :size => 5 } %>
    </div>

    <%= f.input :amazon_product_url, :label => "Product URL", :hint => "Must be the URL linked from the wish list" %>

    <%= f.input :amazon_cover_type, :label => "Cover", :collection => ['any','paperback','hardcover','other'], :default => 'any', :hint => "What is the type of cover of the book?" %>
  </div>

  <div class="actions">
    <%= f.button :submit %>
  </div>
<% end %>
