<% title "Books" %>
<% admin_page %>

<div class="links">
  <%= link_to 'New Book', new_book_path %>
</div>

<h1>Listing books</h1>


<%= form_tag books_path, :method => 'get', :id => "books_search", :class => "search_form" do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
  <div id="books"><%= render 'books' %></div>
<% end %>

